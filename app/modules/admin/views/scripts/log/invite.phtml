            <h3>マイミク招待者数[{%$startDate|date_format:"%Y年%m月%d日" %}－{% $endDate|date_format:"%Y年%m月%d日" %}]</h3>
            <div id="mainContent">
			<div id="image">
				<ul class="clearfix">
					<li><a href="javascript:void(0);" onclick="ckShowGragh('1');return false;" >Pie</a></li>
					<li><a href="javascript:void(0);" onclick="ckShowGragh('2');return false;">Histogram</a></li>
				</ul>
				{%if $aryInfo%}
				<img alt="chart" src="{%$baseUrl%}/generated/invite/invite{%$uid%}_{%$type%}.png" style="border: 1px solid gray;"/>
				{%/if%}
				<input type="hidden" id="mixiAppId" name="mixiAppId" value="{%$appInfo.mixi_app_id%}"  />
				<input type="hidden" id="index" name="index" value="1"  />
            </div>
             {% if $aryInfo %}
                <table id="age"class="mytable" cellspacing="0" summary="The technical specifications of the Apple
                    PowerMac G5 series">
                    <caption>マイミク招待者数</caption>
                    <tr>
                        <th scope="col">ランク</th>
                        <th scope="col">マイミク招待者数</th>
                        <th scope="col">人数</th>
                    </tr>
                    {% foreach from=$aryInviteName key=k item=data name=invite %}
                    <tr {%if $smarty.foreach.invite.index%2 %}class="overlight"{%/if%}>
                    <td class="row">{%$smarty.foreach.invite.index+1%} </td>
                    <td class="row">{%$data%}</td>
                    <td class="row">
                    {%math equation="round(count / sum *100)" 
                    count=$aryInfo.$k
                    sum=$sum"%}%[{%$aryInfo.$k%}人]
                    </td>
                    </tr>
                    {%/foreach%}
                </table>
                {% else if %}
                                    何もありません
               {%/if%}
             <br/><br/><br/>
                <a href="javascript:void(0);" id = "btnBack" >&lt;&lt;管理アプリケーション一覧へ</a>
            </div><!--#"mainContent"-->
        </div><!--#mainColumn-->

    </div><!--/#container-->

